<!DOCTYPE html>
<html lang="en">
  <%- include('include/head'); %>
  <body class="p-0 m-0 font-san">
    <%- include('include/header') %>
    <main class="w-[100vw] h-[100vh] flex flex-col items-center">
      <% if (products.length > 0) { %>
      <div class="p-9 grid sm:grid-cols-1 md:grid-cols-3 gap-2">
        <% products.forEach(element => { %>
        <article
          class="m-0 shadow-lg shadow-cyan-900 flex flex-col gap-1 items-center justify-center"
        >
          <h2 class="mt-8 text-xl text-black font-bold mb-4">
            <%= element.title %>
          </h2>
          <img class="h-62 w-96" src="<%= element.img %>" />
          <div class="m-4 flex flex-col items-center">
            <p class="text-2xl font-bold text-slate-700">
              <%= element.price %>$
            </p>
            <p class="text-lg font-light text-slate-700">
              <%= element.description %>
            </p>
            <button
              class="py-2 px-4 mt-8 rounded text-md text-slate-white bg-slate-500 hover:bg-slate-600 hover:cursor-pointer hover:scale-110 transition"
            >
              Add to cart
            </button>
          </div>
        </article>

        <% })%>
      </div>
      <% } else { %>
      <p class="text-2xl text-slate-900">No products available yet</p>
      <% } %>
    </main>
  </body>
</html>
